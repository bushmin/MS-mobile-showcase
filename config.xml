<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ms.promo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <hook src="hooks/hookers.js" type="before_prepare"/>
    <hook src="hooks/beforedep.js" type="before_deploy"/>
    <name>Promo</name>
    <description>Demo app for Marketing Solutions.</description>
    <author email="" href="">
        Biznes Resheniya
    </author>
    <content src="index.html"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
        <preference name="BackupWebStorage" value="none"/>
        <preference name="StatusBarOverlaysWebView" value="true"/>
        <preference name="StatusBarBackgroundColor" value="#000000"/>
        <preference name="StatusBarStyle" value="lightcontent"/>
    </platform>
    <allow-navigation href="*"/>
    <preference name="orientation" value="portrait"/>
    <engine name="android" spec="^6.2.3"/>
    <engine name="ios" spec="^4.4.0"/>
    <plugin name="cordova-plugin-badge" spec="^0.8.5"/>
    <plugin name="cordova-plugin-camera" spec="^2.4.1">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="Scan barcodes."/>
        <variable name="NSPHOTOLIBRARYUSAGEDESCRIPTIONENTRY" value="Upload cheques."/>
    </plugin>
    <plugin name="cordova-plugin-compat" spec="^1.2.0"/>
    <plugin name="cordova-plugin-device" spec="^1.1.7"/>
    <plugin name="cordova-plugin-fcm" spec="^2.1.2"/>
    <plugin name="cordova-plugin-geolocation" spec="^2.4.3"/>
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.1"/>
    <plugin name="cordova-plugin-statusbar" spec="^2.2.3"/>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2"/>
    <plugin name="phonegap-plugin-barcodescanner" spec="~6.0.8">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="To scan barcodes."/>
    </plugin>
    <engine name="browser" spec="~4.1.0"/>
</widget>
